<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "/", class: "navbar-brand" do %>
  <%= image_tag "logo.png", class: "avatar" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
      <li class="nav-item active">
        <%= link_to "Home", "/", class: "nav-link" %>
      </li>
      <li class="nav-item active">
        <%= link_to "About Us", "/#about", class: "nav-link" %>
      </li>
      <li class="nav-item active">
        <%= link_to "Products", "/products", class: "nav-link" %>
      </li>
      <li class="nav-item active">
        <i class=nav-link style="font-style:normal"><%= "#{current_user.first_name}" %></i>
      </li>
      <li class="nav-item dropdown">
        <%if current_user.photo.attached?%>
        <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle",  id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <%else%>
        <%= image_tag "https://envato-shoebox-0.imgix.net/d758/4303-6568-4778-9d91-de421163e388/Asparagus-13+copy.jpg?auto=compress%2Cformat&fit=max&mark=https%3A%2F%2Felements-assets.envato.com%2Fstatic%2Fwatermark2.png&markalign=center%2Cmiddle&markalpha=18&w=500&s=c050a58498886415f5cb99cf7fec0b3b", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <%end%>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Dashboard", "/orders", class: "dropdown-item" %>
          <%= link_to "Add listing", "/products/new", class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
      <% else %>
      <li class="nav-item active">
        <%= link_to "Products", "/products", class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Login", new_user_session_path, class: "nav-link" %>
      </li>
      <% end %>
    </ul>
  </div>
</div>
