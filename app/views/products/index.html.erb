<h1>Products</h1>

  <div class="cards">
    <% @products.each do |product| %>
      <%= link_to "products/#{product.id}" do %>
          <div class="card-trip" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('');">
            <div class="container">
              <h2><%= product.name %> </h2>
            </div>
          </div>
        <% end %> 
    <%end%>
  </div>

  
  <%= cl_image_tag("1cyz68txruqyonac41s8070kwgq2",
      width: 400, height: 300, crop: :fill) %>