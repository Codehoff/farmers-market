<div class=wrapper>
    <div class="container mt-5"> 
    <%= simple_form_for [ @product ] do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.association :category %>
        <%= f.input :unit %>
        <%= f.input :stock_info, label: "In stock", input_html: { min: 0 } %>
        <%= f.input :price %>
        <%= f.input :photo, as: :file %>
        <%= f.submit "Submit Listing", class: "btn btn-primary" %>
    <% end %>
    </div>
</div>