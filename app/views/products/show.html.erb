<% if @product.photo.attached? %>
    <div class="banner d-flex" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @product.photo.key %> ');">
<% else %>
    <div class="banner" style="background:red">
<% end %>
  <div class="container">
    <h1 id= banner-text-typedjs></h1>
  </div>
</div>
<div class=ml-5>
<h1><%=@product.name%></h1>
<%= link_to "Order", "/products/#{@product.id}/orders/new" %>
<%= link_to "Leave a review", "/products/#{@product.id}/reviews/new" %>

<%= link_to "Delete this product", product_path(@product), method: :delete, data: { confirm: "Are you sure? "} %> 
</div>
<h2 class=ml-5>Reviews:</h2>
 <ul class=ml-5 style="list-style: none">
 <% @product.reviews.each do |review| %>
  <li><h5> <%= "#{review.content}" %> </h5> </li>
  <%end%>
</ul>



